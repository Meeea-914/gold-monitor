# Logrotate file for sit-monitor.service

/var/log/sit-monitor.log {
    compress
    notifempty
    daily
    rotate 3
    create 640 syslog adm
    minsize 1M
    postrotate
        /usr/bin/systemctl restart sit-monitor.service > /dev/null 2>&1
	/usr/bin/systemctl restart rsyslog.service > /dev/null 2>&1
    endscript
}
